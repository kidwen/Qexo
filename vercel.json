{
  "builds": [
    {
      "src": "core/wsgi.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.12" }
    },
    {
      "src": "vercel.sh",
      "use": "@vercel/static-build",
      "config": { "distDir": ".", "nodeVersion": "24.x" }
    }
  ],
  "rewrites": [
    {
      "source": "(.*)",
      "destination": "core/wsgi.py"
    }
  ],
  "trailingSlash": true
}
